<div class="body">
<div class="container">

	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h1>Editing Book</h1>
			<%= form_for(@book) do |f| %>
			    <h4>Title</h4>
			    <%= f.text_field :title,class: "col-md-12" %>
			    <h4>Body</h4>
			    <%= f.text_area :body %>
			    <%= f.submit 'Update Book',class: 'btn btn-primary col-md-12' %>
			<% end %>

		    <%= link_to "Show",book_path %>
		    <%= link_to "Back", books_path %>

		</div>
	</div>
</div>
</div>
