<div class="body">
  <% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <li>error</li>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= notice %>
<div class="container">
<div class="row">

   <div class="col-xs-3">
      <h2>User info</h2>
      <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg' ,fallback: 'no_image.png',size: '100x100'%>

          <table class="table">
              <tbody>
                <tr></tr>
                <tr>
                  <th>name</th>
                  <td><%= @book.user.name %></td>
                </tr>

                <tr>
                  <th>introduction</th>
                  <td><%= @book.user.introduction %></td>
                </tr>
              </tbody>
          </table>

   <div class="row">
    <a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user" href="/users/edit"></a>

           <h1>New book</h1>
               <%= form_for(@bookn, url: '/books') do |f| %>

           <h4>Title</h4>
               <%= f.text_field :title %>

           <h4>Opinion</h4>
               <%= f.text_area :body %>

           <%= f.submit 'Create Book' %>

           <% end %>
   </div>
   </div>



<div class="col-xs-9">
		<h2>Book detail</h2>

       <table class="table table-hover table-inverse">

       <thead>
          <tr>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
          </tr>
       </thead>


       <tbody>
          <tr>
          <th>
            <%= link_to user_path(@book.user_id) do %>
            <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, format: 'jpeg',fallback: 'no_image.png',size: '40x40' %>
              <% end %>
            </th>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <td>
            <% if @book.user == current_user %>
             <%= link_to "Edit",edit_book_path(@book.id) %>
            <% end %>
          </td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to "Destroy", book_path, method: :delete %>
            <% end %>
        </tr>
        <td><%= link_to @book.user.name , user_path(@book.user.id) %></td>




    </tbody>


</table>
</div>
</div>
</div>
</div>

