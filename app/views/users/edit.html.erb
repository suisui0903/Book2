<div class="container">


    <h2>User info </h2>
    <%= form_for(@user) do |f| %>


  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :profile_image %>
    <%= f.attachment_field :profile_image %>

  <div class="field">
    <%= f.label :Introduction %><br />
    <%= f.text_field :introduction, autofocus: true %>
  </div>



  <div class="actions">
    <%= f.submit "Update User" %>
  </div>
<% end %>

